@using Odev1.Models.DTO_s;
@model EmployeeCreateDTO;

@{
    Layout = null; 
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Odev1.styles.css" asp-append-version="true" />

<div class="card">
    <div class="card-header">
        <h3>Yeni Calisan Girisi</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="@Model.FirstName" class="form-label">Calisan Ismi</label>
                <input asp-for="@Model.FirstName" class="form-control">
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.LastName" class="form-label">Calisan Soyismi</label>
                <input asp-for="@Model.LastName" class="form-control">
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Kaydet</button>
                <button type="reset" class="btn btn-success">Temizle</button>
            </div>
            <a class="btn btn-primary" asp-action="Index">Geri Don</a>
        </form>
    </div>
</div>
